<h1>Listing Matches</h1>

<table>
  <tr>
    <th>Opposition</th>
    <th>Season</th>
    <th>Round</th>
    <th>Date</th>
    <th>Time</th>
    <th>Actions</th>
  </tr>

<% @matches.each do |match| %>
  <tr>
      <td><%= match.opposition_team.name %></td>
      <td><%= match.team.season.name %></td>
      <td><%= match.round %></td>
      <td><%= match.datetime.strftime("%d/%m/%Y") %></td>
      <td><%= match.datetime.strftime("%H:%M") %></td>
    <td>
        <%= link_to 'Show', match %>
        <%= link_to 'Edit', edit_match_path(match) %>
        <%= link_to 'Destroy', match, :confirm => 'Are you sure?', :method => :delete %>
      </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Match', new_match_path %>
