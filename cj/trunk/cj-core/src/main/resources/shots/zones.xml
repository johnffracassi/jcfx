<zones>
	<zone id="default-zone" name="Default">
		<consequence type="com.siebentag.cj.game.shot.NoConsequence" />
		<probability type="com.siebentag.cj.game.math.prob.Definite" />
		<shape>
			<point>-7.0,0.0</point>
			<point>-7.0,7.0</point>
			<point>7.0,7.0</point>
			<point>7.0,0.0</point>
		</shape>
	</zone>
	
	<zone id="stumps" name="Stumps">
		<consequence type="com.siebentag.cj.game.shot.Bowled" />
		<probability type="com.siebentag.cj.game.math.prob.Definite" />
		<shape>
			<point>-0.25,0.0</point>
			<point>-0.25,0.75</point>
			<point>0.25,0.75</point>
			<point>0.25,0.0</point>
		</shape>
	</zone>
	
	<zone id="body" name="Body">
		<consequence type="com.siebentag.cj.game.shot.HitBatsman" />
		<probability type="com.siebentag.cj.game.math.prob.Definite" />
		<shape>
			<point>0.0,0.0</point>
			<point>-0.3,0.0</point>
			<point>-0.5,0.9</point>
			<point>-0.1,1.5</point>
			<point>0.2,1.3</point>
			<point>0.0,0.9</point>
		</shape>
	</zone>
	
	<zone id="head" name="Head">
		<consequence type="com.siebentag.cj.game.shot.HitBatsmanHead" />
		<probability type="com.siebentag.cj.game.math.prob.Linear">
			<param name="maximum" value="20" />
			<param name="minimum" value="70" />
		</probability>
		<shape>
			<point>0.12,1.38</point>
			<point>0.32,1.45</point>
			<point>0.365,1.6</point>
			<point>0.265,1.715</point>
			<point>0.08,1.695</point>
			<point>0.0,1.595</point>
			<point>0.01,1.46</point>
		</shape>
	</zone>
</zones>
